{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "linebreak-style": 0,
        "global-require": 0,
        "eslint linebreak-style": [0, "error", "windows"],
        "jsx-a11y/control-has-associated-label": [ 2, {
            "labelAttributes": ["label"],
            "controlComponents": ["CustomComponent"],
            "ignoreElements": [
              "audio",
              "canvas",
              "embed",
              "input",
              "textarea",
              "tr",
              "video",
              "a"
            ],
            "ignoreRoles": [
              "grid",
              "listbox",
              "menu",
              "menubar",
              "radiogroup",
              "row",
              "tablist",
              "toolbar",
              "tree",
              "treegrid",
              "a"
            ],
            "depth": 3
          }]
        
    }
}